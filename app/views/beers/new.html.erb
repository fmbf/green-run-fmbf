<div class="content-padded">
  <h1 class="beer-name">Add New Beer</h1>
  <%= link_to 'Back To All Beer', beers_url %>
  <br>
  <br>

  <!-- Add beer form -->
  <div class="new-beer-form-div">

    <form id="beerform" action="<%= beers_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

      <label for="">Name:
        <br>
        <input type="text" name="beer[name]" value="<%=@beer.name%>">
      </label>
      <br>

      <label for="">Brewery:
        <br>
        <select id='new-beer-brewery-select' form="beerform" name="beer[brewery_id]">
          <% if @breweries %>
            <% @breweries.each do |brewery| %>
              <option value="<%= brewery.id %>"><%= brewery.name %></option>
            <% end %>
          <% end %>
        </select>
      </label>
      <br>

      <label for="">Actively Brewed:
        <br>
        <input type="checkbox" name="beer[actively_brewed]" value="<%=@beer.actively_brewed%>">
      </label>
      <br>

      <label for="">ibu:
        <br>
        <input type="number" name="beer[ibu]" value="<%=@beer.ibu%>">
      </label>
      <br>

      <label for="">abv:
        <br>
        <input type="float" name="beer[abv]" value="<%=@beer.abv%>">
      </label>
      <br>

      <label for="">flavors:
        <br>
        <input type="text" name="beer[flavors]" value="<%=@beer.flavors%>">
      </label>
      <br>

      <label for="">Last Tapped On:
        <br>
        <input type="date" name="beer[last_tapped_on]" value="<%=@beer.last_tapped_on%>">
      </label>
      <br>


      <input type="submit" name="submit" value="Add Beer" id='add-beer-form-button'>
      <!-- <%= link_to 'Cancel', beers_url %> -->
    </form>
  </div>
  <!-- ====================================================================== -->
</div>
