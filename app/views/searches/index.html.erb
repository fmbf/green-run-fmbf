<div class="content-padded">

  <h1 class="beer-name">Matching Beers</h1>

  <% if @search_result %>
    <% if @search_result.empty? %>
      <p>No matches found...</p>
    <% end %>
    <ul>
      <% @search_result.each do |beer| %>
      <li>
        <%= link_to beer.name, beer_url(beer) %>
      </li>
      <% end %>
    </ul>
  <% end %>

  <br>
  <!-- <%= link_to 'Back To All Beer', beers_url %> -->
  <a href="/beers"><i class="fas fa-arrow-left fa-lg"></i> <strong>Back to all</strong></a>

